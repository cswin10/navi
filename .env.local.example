# OpenAI API Key (for Whisper transcription)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-...

# Anthropic API Key (for Claude intent parsing)
# Get from: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=sk-ant-...

# ElevenLabs API Key (for text-to-speech)
# Get from: https://elevenlabs.io/app/settings/api-keys
ELEVENLABS_API_KEY=...

# n8n Webhook URLs (create these in your n8n instance)
N8N_WEBHOOK_URL_NOTION=https://your-n8n-instance.com/webhook/notion-task
N8N_WEBHOOK_URL_EMAIL=https://your-n8n-instance.com/webhook/gmail-send

# n8n Webhook Secret (for HMAC signature verification)
# Generate a random secure string: openssl rand -hex 32
N8N_WEBHOOK_SECRET=your_secret_key_here

# Supabase Configuration
# Get from: https://app.supabase.com/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJ...
SUPABASE_SERVICE_KEY=eyJ...
